<?xml version="1.0" encoding="utf-8"?><xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform"><xsl:include href="../applications/scielo-org/xsl/article_output.xsl"/><xsl:include href="sci_common.xsl"/><xsl:variable name="lang" select="//vars/lang"/><xsl:variable name="texts" select="document('../applications/scielo-org/xml/texts.xml')/texts/language[@id = $lang]"/><xsl:variable name="total" select="count(//item)"/><xsl:template match="/">    <div class="content">		<div class="articleList">				<xsl:apply-templates select="//channel">				</xsl:apply-templates>			</div>	</div></xsl:template><xsl:template match="channel">           <xsl:choose>          	 <xsl:when test="$total &gt; 0">				<xsl:apply-templates select="item"/>           	 </xsl:when>				<xsl:otherwise>				<div id="noComments">                        <xsl:value-of select="$translations/xslid[@id='comments']/text[@find = 'doesnt_comment']"/>				</div>					</xsl:otherwise>			</xsl:choose></xsl:template><!--<xsl:template match="channel">			<xsl:choose>                     <xsl:when test="$total &gt; 0">					<xsl:apply-templates select="item"/>           	 	</xsl:when>           	 </xsl:choose> </xsl:template>--><xsl:template match="item">				<div class="articleHeader">					<div class="count">				<xsl:value-of select="position()"/> / <xsl:value-of select="$total"/>					</div>				<div class="collection">					 <xsl:variable name="authorAndemail" select="title"/>								<xsl:value-of select="substring-after($authorAndemail,'By:')" />   						</div>								</div>				 	<ul>	           	<xsl:value-of select="description"/>	           		</ul>	           	</xsl:template> </xsl:stylesheet>